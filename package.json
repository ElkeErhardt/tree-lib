{
  "name": "@geops/tree-lib",
  "description": "Library for tree recommendations.",
  "license": "MIT",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "unpkg": "dist/index.umd.js",
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "microbundle": "^0.11.0",
    "prettier": "^1.18.2"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ]
  },
  "hooks": {
    "pre-commit": "lint-staged",
    "post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ 1$ ]]; then yarn install --frozen-lockfile; fi",
    "post-merge": "yarn install --frozen-lockfile",
    "post-rebase": "yarn install"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint src --fix",
      "prettier --write 'src/**/*.js'",
      "git add",
      "yarn test --bail --findRelatedTests --watchAll=false"
    ]
  },
  "scripts": {
    "build": "microbundle",
    "lint": "eslint src",
    "test": "microbundle && jest"
  },
  "dependencies": {}
}
